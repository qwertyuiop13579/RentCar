@model Labs.ViewModels.EditClientViewModel
@{
    ViewBag.Title = "Редактирование клиента";
}
<form asp-action="Edit" asp-controller="Client">
    <div asp-validation-summary="All" class="text-danger"></div>

    <fieldset title="Passport">
        <legend>Паспортные данные</legend>
        <div class="form-group">
            <label asp-for="passport1" class="control-label">Серия паспорта</label>
            <input type="text" asp-for="passport1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="passport2" class="control-label">Номер паспорта</label>
            <input type="text" asp-for="passport2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="passport3" class="control-label">Личный номер паспорта</label>
            <input type="text" asp-for="passport3" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="date1" class="control-label">Дата выдачи паспорта</label>
            <input type="date" asp-for="date1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="date2" class="control-label">Срок действия паспорта</label>
            <input type="date" asp-for="date2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="authority" class="control-label">Орган, который выдал паспорт</label>
            <input type="text" asp-for="authority" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="sex" class="control-label">Пол</label>
            <select asp-for="sex" asp-items="Html.GetEnumSelectList<Sex>()"></select>
        </div>
        <div class="form-group">
            <label asp-for="date3" class="control-label">Дата рождения</label>
            <input type="date" asp-for="date3" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name1" class="control-label">Фамилия</label>
            <input type="text" asp-for="Name1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name2" class="control-label">Имя</label>
            <input type="text" asp-for="Name2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name3" class="control-label">Отчество</label>
            <input type="text" asp-for="Name3" class="form-control" />
        </div>
    </fieldset>



    <fieldset title="Address">
        <legend>Адрес</legend>
        <div class="form-group">
            <label asp-for="country" class="control-label">Страна</label>
            <input type="text" asp-for="country" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="region" class="control-label">Область</label>
            <input type="text" asp-for="region" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="district" class="control-label">Регион</label>
            <input type="text" asp-for="district" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="type1" class="control-label">Тип населённого пункта</label>
            <select asp-for="type1" asp-items="Html.GetEnumSelectList<TypeCity>()"></select>
        </div>
        <div class="form-group">
            <label asp-for="city" class="control-label">Город</label>
            <input type="text" asp-for="city" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="type2" class="control-label">Тип улицы</label>
            <select asp-for="type2" asp-items="Html.GetEnumSelectList<TypeStreet>()"></select>
        </div>
        <div class="form-group">
            <label asp-for="street" class="control-label">Улица</label>
            <input type="text" asp-for="street" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="num1" class="control-label">Дом</label>
            <input type="text" asp-for="num1" class="form-control" />
        </div>
        <div>
            <label asp-for="num2" class="control-label">Номер корпуса</label>
            <input type="number" asp-for="num2" class="form-control" />
        </div>
        <div>
            <label asp-for="num3" class="control-label">Номер квартиры</label>
            <input type="number" asp-for="num3" class="form-control" />
        </div>
        <div>
            <label asp-for="index" class="control-label">Почтовый индекс</label>
            <input type="number" asp-for="index" class="form-control" />
        </div>
        <div>
            <label asp-for="num4" class="control-label">Домашний телефон</label>
            <input type="number" asp-for="num4" class="form-control" />
        </div>
        <div>
            <label asp-for="code" class="control-label">Телефонный код оператора</label>
            <input type="number" asp-for="code" class="form-control" />
        </div>
        <div>
            <label asp-for="mobile" class="control-label">Мобильный телефон</label>
            <input type="number" asp-for="mobile" class="form-control" />
        </div>
        <div>
            <label asp-for="email" class="control-label">Почта</label>
            <input type="email" asp-for="email" class="form-control" />
        </div>
    </fieldset>


    <div class="form-group">
        <label asp-for="bank_name" class="control-label">Банк</label>
        <select asp-for="bank_name" asp-items="ViewBag.Banks" required></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>
<a asp-controller="Client" asp-action="Index" class="btn btn-primary">Отмена</a>
