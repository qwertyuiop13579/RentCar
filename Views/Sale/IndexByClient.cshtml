@model IEnumerable<Labs.Models.Sale>
@{
    ViewBag.Title = "Список заказов клиента";
}

<table class="table">
    <tr><th>ID машины</th><th>Начало аренды</th><th>Конец аренды</th><th>Цена</th><th>Статус</th></tr>
    @foreach (var sale in Model)
    {
        <tr>
            <td>@sale.id_car</td>
            <td>@sale.date2.ToShortDateString()</td>
            <td>@sale.date3.ToShortDateString()</td>
            <td>@sale.price</td>
            <td>@sale.status</td>
            <td>
                <a class="btn btn-sm btn-danger" asp-controller="Sale" asp-action="Delete" asp-route-id_sale="@sale.Id">Удалить</a>
                <a class="btn btn-sm btn-primary" asp-controller="Sale" asp-action="Edit" asp-route-id_sale="@sale.Id">Изменить</a>
            </td>
        </tr>
    }
</table>