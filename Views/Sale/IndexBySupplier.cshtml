@model IEnumerable<Labs.Models.Sale>
@{
    ViewBag.Title = "Список заказов поставщика";
}

<table class="table">
    <tr><th>Клиент</th><th>Автомобиль</th><th>Начало аренды</th><th>Конец аренды</th><th>Цена</th><th>Статус</th></tr>
    @foreach (var sale in Model)
    {
        <tr>
            <td> <a asp-controller="Client" asp-action="Details" asp-route-id="@sale.id_client">@sale.id_client</a></td>
            <td> <a asp-controller="Car" asp-action="Details" asp-route-id="@sale.id_car">@sale.id_car</a></td>
            <td>@sale.date2.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@sale.date3.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@sale.summ</td>
            <td>@sale.status</td>
        </tr>
    }
</table>
<a href='javascript:history.go(-1)' class="btn btn-primary">Назад</a>