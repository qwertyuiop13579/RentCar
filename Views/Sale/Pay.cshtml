@model Labs.ViewModels.PayViewModel
@{ ViewBag.Title = "Оплата"; }

<div class="container sm">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Оплата аренды @Model.SaleId</h1>
        </div>
        <div>
            <form method="POST" action="https://money.yandex.ru/quickpay/confirm.xml">
                <input name="label" value="@Model.SaleId" type="hidden">
                <input name="receiver" value="4100111282324678" type="hidden">
                <input name="quickpay-form" value="shop" type="hidden">
                <input type="hidden" name="targets" value="Оплата заказа @Model.SaleId">

                <div class="form-group">
                    <label class="control-label" for="sum">Сумма: </label>
                    <input class="form-control" name="sum" value="@Model.Sum" maxlength="10" data-type="number" type="text" readonly>
                </div>

                <div class="form-group">
                    <label class="control-label" for="sum">Способ оплаты: </label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="paymentType" value="PC">
                        <label class="form-check-label" for="inlineRadio1">Яндекс.Деньгами</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="paymentType" value="AC">
                        <label class="form-check-label" for="inlineRadio2">Банковской картой</label>
                    </div>
                </div>

                <input class="btn btn-primary" type="submit" name="submit-button" value="Оплатить">
                <input name="successURL" value="https://labs20201111132228.azurewebsites.net/Sale/Paid" type="hidden">
                <input name="quickpay-back-url" value="https://labs20201111132228.azurewebsites.net/" type="hidden">
            </form>
        </div>
    </div>
</div>