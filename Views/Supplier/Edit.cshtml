@model Labs.ViewModels.EditSupplierViewModel
@{
    ViewBag.Title = "Изменение";
}
    <form asp-action="Create" asp-controller="Supplier">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="firmname" class="control-label">Название</label>

            <input type="text" asp-for="firmname" class="form-control" />
        </div>  
        <div class="form-group">
            <label asp-for="unn" class="control-label">Учётный номер налогоплательщика</label>
            <input type="text" asp-for="unn" class="form-control" />
        </div>
        <fieldset title="Address">
            <legend>Адрес</legend>
            <div class="form-group">
                <label asp-for="country" class="control-label">Страна</label>
                <input type="text" asp-for="country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="type1" class="control-label">Тип населённого пункта</label>
                <select asp-for="type1" asp-items="Html.GetEnumSelectList<TypeCity>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label">Город</label>
                <input type="text" asp-for="city" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="type2" class="control-label">Тип улицы</label>
                <select asp-for="type2" asp-items="Html.GetEnumSelectList<TypeStreet>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="street" class="control-label">Улица</label>
                <input type="text" asp-for="street" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="numhouse" class="control-label">Дом</label>
                <input type="number" asp-for="numhouse" class="form-control" />
            </div>
            <div>
                <label asp-for="numapartment" class="control-label">Номер квартиры</label>
                <input type="number" asp-for="numapartment" class="form-control" />
            </div>
            <div>
                <label asp-for="index" class="control-label">Почтовый индекс</label>
                <input type="text" asp-for="index" class="form-control" />
            </div>
            <div>
                <label asp-for="housephone" class="control-label">Домашний телефон</label>
                <input type="text" asp-for="housephone" class="form-control" />
            </div>
            <div>
                <label asp-for="mobilephone" class="control-label">Мобильный телефон</label>
                <input type="text" asp-for="mobilephone" class="form-control" />
            </div>
            <div>
                <label asp-for="email" class="control-label">Почта</label>
                <input type="text" asp-for="email" class="form-control" />
            </div>
        </fieldset>

        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
        </div>
    </form>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Отмена</a>