@model Labs.ViewModels.EditSupplierViewModel
@{ ViewBag.Title = "Изменение поставщика"; }

<div class="container sm">
    <div class="container">
        <form asp-action="Edit" asp-controller="Supplier">
            <div class="text-center mb-4">
                <h1 class="h3 mb-3 font-weight-normal">Редактирование поставщика</h1>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value=@Model.Id />
            <input type="hidden" asp-for="id_client" value=@Model.id_client />
            <div class="form-group">
                <label asp-for="firmname" class="control-label">Название</label>
                <input type="text" asp-for="firmname" class="form-control" required/>
            </div>

            <div class="form-group">
                <label asp-for="unn" class="control-label">Учётный номер налогоплательщика</label>
                <input type="text" asp-for="unn" class="form-control" required/>
            </div>

            <fieldset title="Address">
                <legend>Адрес</legend>

                <div class="form-group">
                    <label asp-for="country" class="control-label">Страна</label>
                    <input type="text" asp-for="country" class="form-control" required/>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="type1" class="control-label">Тип населённого пункта</label>
                        <select asp-for="type1" class="form-control" asp-items="Html.GetEnumSelectList<TypeCity>()"></select>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="city" class="control-label">Населённый пункт</label>
                        <input type="text" asp-for="city" class="form-control" required/>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="type2" class="control-label">Тип улицы</label>
                        <select asp-for="type2" class="form-control" asp-items="Html.GetEnumSelectList<TypeStreet>()"></select>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="street" class="control-label">Улица</label>
                        <input type="text" asp-for="street" class="form-control" required/>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="numhouse" class="control-label">Дом</label>
                        <input min="0" type="number" asp-for="numhouse" class="form-control" required/>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="numapartment" class="control-label">Номер квартиры</label>
                        <input min="0" type="number" asp-for="numapartment" class="form-control" required/>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="index" class="control-label">Почтовый индекс</label>
                        <input type="text" asp-for="index" class="form-control" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="housephone" class="control-label">Домашний телефон</label>
                        <input type="text" asp-for="housephone" class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="mobilephone" class="control-label">Мобильный телефон</label>
                        <input type="text" asp-for="mobilephone" class="form-control" required/>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="email" class="control-label">Почта</label>
                    <input type="email" asp-for="email" class="form-control" required/>
                </div>
            </fieldset>

            <div class="form-group button-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary-dark">Отмена</a>
            </div>
        </form>
    </div>
</div>