@model IEnumerable<Labs.Models.Supplier>
@{ ViewBag.Title = "Список поставщиков"; }

<div class="container" style="padding: 15px;">
    <a class="btn btn-primary" asp-controller="Supplier" asp-action="Create">Добавить поставщика</a>

    <table class="table">
        <tr><th>Название</th><th>УНП,УНН</th><th></th><th></th></tr>
        @foreach (var supp in Model)
        {
<tr>
    <td>@supp.firmname</td>
    <td>@supp.unn</td>
    <td>
        <form asp-action="Delete" asp-route-id="@supp.Id" method="post">
            <!-- <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@supp.Id">Подробнее</a> -->
            <button type="submit" class="btn btn-sm btn-danger">
                Удалить
            </button>
        </form>
    </td>
</tr>}
    </table>
</div>