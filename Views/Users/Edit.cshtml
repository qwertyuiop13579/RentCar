@model Labs.ViewModels.EditUserViewModel
@{ ViewBag.Title = "Редактирование пользователя"; }

<div class="container sm">
    <div class="container">
        <form asp-action="Edit" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
            </div>
        </form>
        <a asp-controller="Users" asp-action="Index" class="btn btn-primary">Отмена</a>
    </div>
</div>