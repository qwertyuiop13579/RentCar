@model Labs.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
    <form asp-action="Edit" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name1" class="control-label">Фамилия</label>
            <input type="text" asp-for="Name1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name2" class="control-label">Имя</label>
            <input type="text" asp-for="Name2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name3" class="control-label">Отчество</label>
            <input type="text" asp-for="Name3" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>
    <a asp-controller="Users" asp-action="Index" class="btn btn-primary">Отмена</a>