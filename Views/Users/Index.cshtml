
@model IEnumerable<Labs.Models.User>
@{ ViewBag.Title = "Список пользователей"; }

<!-- <a asp-action="Create">Добавить пользователя</a> -->
<div class="container" style="padding-bottom: 15px;">
    <table class="table">
        <tr><th>Email</th><th></th><th></th></tr>
        @foreach (var user in Model)
        {
<tr>
    <td>@user.Email</td>
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
            <a class="btn btn-sm btn-primary" asp-action="ChangeRole" asp-route-id="@user.Id">Сменить роль</a>
            <a class="btn btn-sm btn-primary" asp-action="ChangeStatus" asp-route-id="@user.Id">Сменить статус</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Удалить
            </button>
        </form>
    </td>
</tr>}
    </table>
</div>